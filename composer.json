{
  "name": "stracker-phil/wpdi",
  "description": "Truly WordPress-native dependency injection",
  "version": "1.0.0",
  "license": "GPL-2.0",
  "type": "library",
  "keywords": [
    "wordpress",
    "dependency-injection",
    "di",
    "container"
  ],
  "authors": [
    {
      "name": "Philipp Stracker",
      "email": "info@philippstracker.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "psr/container": "^1.1"
  },
  "require-dev": {
    "wp-cli/wp-cli": "^2.11",
    "phpunit/phpunit": "~9.6.0",
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^2.0",
    "phpmetrics/phpmetrics": "^2.9"
  },
  "autoload": {
    "psr-4": {
      "WPDI\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPDI\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/report.xml",
    "cs": "phpcs --standard=WordPress src/",
    "cs-fix": "phpcbf --standard=WordPress src/"
  }
}
